{
  "manifest_version": 3,
  "name": "API Proxy Tool",
  "description": "A Chrome extension for proxying API requests to mock URLs",
  "options_ui": {
    "page": "src/pages/options/index.html"
  },
  "action": {
    "default_title": "API Proxy Tool",
    "default_icon": {
      "32": "icon-32.png"
    }
  },
  "icons": {
    "128": "icon-128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "tabs"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/pages/background/index.ts"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icon-128.png",
        "icon-32.png",
        "dev-icon-32.png",
        "dev-icon-128.png"
      ],
      "matches": []
    }
  ]
}
